extends layout

block content
  h1= title
  p Welcome to #{title}
  nav.navbar.navbar-expand-lg.navbar-light.bg-light
    a.navbar-brand(href='#') ADH-DO
    button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarNav' aria-controls='navbarNav' aria-expanded='false' aria-label='Toggle navigation')
      span.navbar-toggler-icon
    #navbarNav.collapse.navbar-collapse
      ul.navbar-nav
        li.nav-item.active
          a.nav-link(href='#')
            | Home 
            span.sr-only (current)
        li.nav-item
          a.nav-link(href='#') Who We Are
        li.nav-item
          a.nav-link(href='#') Pricing
        li.nav-item
          a.nav-link(href='#') Contact Us
  div.container
    card(style='width: 18px;')
      img.card-img-top(src='https://i.kym-cdn.com/photos/images/original/001/094/781/06a.jpg' alt='Card image cap')
      .card-body
        h5.card-title Tasks To Do Today 
        p.card-text
          .input-group.mb-3
            .input-group-prepend
              .input-group-text
                input(type='checkbox' aria-label='Checkbox for following text input')
            input.form-control(type='text' aria-label='Text input with checkbox' Value='Learn Node.js!')
          .input-group
            .input-group-prepend
              .input-group-text
                input(type='radio' aria-label='Radio button for following text input')
            input.form-control(type='text' aria-label='Text input with radio button' Value='Code Node.js!')

        a.btn.btn-primary(href='#') Mark As Done
